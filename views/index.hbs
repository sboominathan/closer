    <!-- Login -->
    <div class="container">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
          <div class="well login-box log-in-form">
            <form action="/login" method = "post" id = "login" >
              <legend class="login-title">LOGIN</legend>
              <!-- Username -->
              <div class="form-group">
                <label for="username-email">Username</label>
                <input value='' name = "username" id="username-email" placeholder="Username" type="text" class="form-control" required />
              </div>
              <!-- Password -->
              <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name = "password" value='' placeholder="Password" type="password" class="form-control" required/>
              </div>
              
              <!-- Future site of Facebook Login -->

              <!-- Login Button -->
              <div class="form-group text-center">
                <button class="btn btn-default btn-cancel-action col-md-6">Cancel</button>
                <input type="submit" class="btn btn-default btn-login-submit col-md-6" value="Login" />
                <div class="row"></div>
              </div>

              <!-- Link to change operation -->
              <a href = "#" class="no-account"> <p> Don't have an account?</p> </a>
            </form>
          </div>
        </div>
      </div>
