<html>
<head>

  <title>{{title}}</title>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel='stylesheet' href='/stylesheets/notifications.css' />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Lato">
  <script src = "/javascripts/matches.js"></script>
  <script type = "text/javascript">



  </script>
</head>


<body class = 'closer'>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
         <div class = "head"> <a class="navbar-brand " href="/"> CLOSER </a> </div>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href = "/home/{{username}}"> Home </a><li>
            <li><a href = "/userview/{{username}}"> {{username}}'s Profile </a><li>
            
            <li><a href = "/groupList/{{username}}"> My Groups </a><li>
            <li><a href="/logout/{{username}}"> <span class="glyphicon glyphicon-log-out"></span>Logout</a></li>

          </ul>
        </div><!--/.nav-collapse -->

    </div>
  </nav>

  <h1 class = "title"> New Group Invites for {{user.first}} {{user.last}} </h1>
  {{#each notifs}}
  <div class="container">
    <div class="row">
      <div class = "col-md-3"></div>
      <div class="col-md-6">
        <div class="well login-box log-in-form">
          <form action="/newgroup/{{../user.user}}" method = "post" id = "new-group" >
            <legend class = "login-title">New Group Invite</legend>
            <!-- inviting user -->
            <div class="form-group">
              <label for="username-email">Invited By:</label>
              <input value="{{user}}" name = "invitername" id="username-email" type="text" class="form-control" readonly = "readonly" required />
            </div>
            <!-- group name -->
            <div class="form-group">
              <label for="groupname">Group Name</label>
              <input  id="groupname" name = "groupname" value="{{groupName}}" type = "text" class="form-control" readonly = "readonly" required/>
            </div>

            <!-- subject -->
            <div class="form-group">
              <label for="password">Subject</label>
              <input id="subject" name = "subject" value="{{subject}}" placeholder="Password" type="text" class="form-control" readonly = "readonly" required/>
            </div>

            <!-- accept/decline buttons -->
            <div class="form-group text-center">
              <input type="submit" class="btn btn-default btn-login-submit col-md-6" value="Decline" formaction = "/removegroup/{{../user.user}}"  />
              <input type="submit" class="btn btn-default btn-login-submit col-md-6" value="Accept" formaction ="/newgroup/{{../user.user}}" />
              <div class = "row"></div>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}

</body>


</html>