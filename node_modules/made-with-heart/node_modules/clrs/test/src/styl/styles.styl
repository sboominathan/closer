body
  width 60%
  margin 50px auto 0

ul
  list-style none
  margin 0 0 10px
  padding 0

  li
    display inline-block
    box-sizing border-box
    margin 0
    margin-right 5px
    width calc(50% - 5px)
    height 50px
    color white
    text-align right
    font-family monospace
    display inline-block
    padding 20px 20px 0
    text-shadow 1px 1px 1px #000

  &.white
    li
      color silver


