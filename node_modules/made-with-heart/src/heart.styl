@import "/node_modules/clrs/lib/clrs"

animation(args...)
  -webkit-animation args
  -moz-animation args
  -ms-animation args
  animation args

transform(args...)
  -webkit-transform args
  -moz-transform args
  -ms-transform args
  transform args

.hrt
  display inline-block
  text-align center

  *
    padding: 0 0.2em

.hrt_made
  font-weight bold

.hrt_heart
  color red
  font-size 150%
  line-height 1

.hrt_heart--beating
  display inline-block
  text-align center
  animation hrt_animation--beating 1s linear infinite

.hrt_author
  a
    text-decoration none

@keyframes hrt_animation--beating
  0%
    transform scale(1.1)
  50%
    transform scale(0.8)
  100%
    transform scale(1)
