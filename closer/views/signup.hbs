<div class="container">
    <div class="row">
    	<div class = "col-md-3"></div>
        <div class="col-md-6">
            <div class="well login-box sign-up-form">
                <form action="/signup" method = "post">
                    <legend class = "signup-title">SIGN UP</legend>
                    <div class="form-group">
                        <label for="username-email"> Username</label>
                        <input name = "username" value='' id="username-email" placeholder="Username" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input name = "email" id="email" value='' placeholder="Email" type="email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name = "password" id="password" value='' placeholder="Password" type="password" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Confirm Password</label>
                        <input name = "passwordcheck" id="password" value='' placeholder="Password Again" type="password" min-length = "8" class="form-control" required />
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-default btn-cancel-action col-md-6">Cancel</button>
                        <input type="submit" class="btn btn-default btn-login-submit col-md-6" value="Sign Up" />
                         <div class = "row"></div>
                    </div>
                   
                	<div class = "account"> <a href = "#" class = "yes-account"> <p> Already have an account? </p> </a> </div>

                </form>

            </div>
        </div>
    </div>
</div>
    </div>
